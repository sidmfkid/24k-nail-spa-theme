<section class="newsletter">


    {% if page.title == 'Contact Us' %}
    <h2>Contact Us</h2>
    <p>Feel free to fill out the form below for any questions regarding online bookings, services, or general questions.
        We will get back to you as soon as we can! Thank you!</p>
    {% form 'contact' %}
    {{ form_errors | default_errors }}

    <div class="newsletter__first-name">
        <label for="first-name">First name</label>
        <input autocomplete="name" type="text" name="contact[first_name]" required />
    </div>

    <div class="newsletter__last-name">
        <label for="last-name">Last name</label>
        <input autocomplete="family-name" type="text" name="contact[last_name]" required />
    </div>

    <div class="newsletter__email">
        <label for="email">Email</label>
        <input autocomplete="email" type="email" name="contact[email]" required />
    </div>

    <div class="newsletter__message">
        <label for="comment">How can we help you?</label>
        <textarea id="comment" name="contact[comment]" rows="10" cols="30"></textarea>
    </div>

    <div class="newsletter__submit">
        <input class="btn btn-primary" type="submit" value="Submit" required />
    </div>
    {% endform %}
    {% endif %}

    {% if page.title != 'Contact Us' %}
    <h2>Sign Up & Save!</h2>
    <p>Sign up for our newsletter for exclusive deals and special events just for our subscibers</p>

    {% form 'customer' %}

    {{ form_errors | default_errors }}

    <div class="newsletter__first-name">
        <label for="first-name">First name</label>
        <input type="text" name="contact[first_name]" />
    </div>

    <div class="newsletter__last-name">
        <label for="last-name">Last name</label>
        <input type="text" name="contact[last_name]" />
    </div>

    <div class="newsletter__email">
        <label for="email">Email</label>
        <input type="email" name="contact[email]" />
    </div>


    <div class="newsletter__submit">
        <input class="btn btn-primary" type="submit" value="Subscribe" />
    </div>
    {% endform %}
    {% endif %}



    {% render 'flowers-1' %}
</section>

